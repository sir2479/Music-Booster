<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mub.repository.MemberMapper">
  <insert id="saveMember">
    insert into member(
      member_id,
      member_email,
      nickname,
      password,
      member_name,
      phone,
      birthday,
      position
      ) VALUES (
        #{member_id},
        #{member_email},
        #{nickname},
        #{password},
        #{member_name},
        #{phone},
        #{birthday},
        #{position}           
    )
  </insert>
  
  <select id="findMember" resultType="member">
    select * from member where member_id = #{member_id}
  </select>
  
   <select id="findMemberByEmail" resultType="member">
    SELECT * FROM member WHERE member_email = #{member_email}
  </select>
  
   <select id="findMemberByNickname" resultType="member">
    SELECT * FROM member WHERE nickname = #{nickname}
  </select>
  
  <update id="updateMember">
    update member
    <set>
    	member_email = #{member_email},  <!-- 수정이 필요한 부분 -->
        nickname = #{nickname},
        <if test="password != null"> password = #{password},</if>
        member_name = #{member_name},
        phone = #{phone},
        birthday = #{birthday},
        profile = #{profile}
    </set>
    <!-- <set>
	      <if test="profile != null">profile= #{profile}</if> 
    </set> -->
      where member_id = #{member_id}
  </update>
  
  <delete id="deleteMember">
    delete from member where member_id = #{member_id}
  </delete>
  
</mapper>
